{
    "name": "mocha-test-runner",
    "displayName": "mocha-test-runner",
    "description": "",
    "version": "0.0.1",
    "publisher": "mujichOk",
    "engines": {
        "vscode": "^1.19.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.buildTestsTree"
    ],
    "main": "./out/extension",
    "contributes": {
        "views": {
			"explorer": [
				{
					"id": "testRunner",
					"name": "Tests"
				}
			]
		},
        "commands": [
            {
                "command": "extension.buildTestsTree",
                "title": "Build tests tree"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
